<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Avatar (kept id) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/station_logo"
        app:shapeAppearanceOverlay="@style/CircularShape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Timestamp (right side) -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:54 AM"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileIcon" />

    <!-- Title / Name (kept id) -->
    <TextView
        android:id="@+id/fireStationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fire Station Name"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toEndOf="@id/profileIcon"
        app:layout_constraintEnd_toStartOf="@id/timestamp"
        app:layout_constraintTop_toTopOf="@id/profileIcon"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp" />

    <!-- Subtitle / last message (kept id; repurpose as snippet) -->
    <TextView
        android:id="@+id/uid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last message"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="@id/fireStationName"
        app:layout_constraintEnd_toStartOf="@id/unreadDot"
        app:layout_constraintTop_toBottomOf="@id/fireStationName"
        android:layout_marginEnd="8dp" />

    <!-- Unread dot (show/hide in code) -->
    <View
        android:id="@+id/unreadDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:backgroundTint="?attr/colorPrimary"
        android:background="@drawable/bg_unread_dot"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
