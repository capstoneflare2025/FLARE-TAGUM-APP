<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top App Bar (keeps id 'header' so existing constraints still work) -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:title="Information"
            app:titleCentered="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back button (same id) -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_backed"
            android:contentDescription="@string/content_desc_navigate_up"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/header"
            app:layout_constraintTop_toTopOf="@id/header"
            app:layout_constraintBottom_toBottomOf="@id/header" />

        <!-- Description -->
        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fire stations are critical for rapid emergency response. Save these numbers and call the nearest station during fire, smoke, or rescue emergencies."
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/description_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- =================== Station Cards =================== -->

        <!-- Card 1: Cuambugan -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tagumCentral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_map_pin_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/content_desc_icon_map_title"
                        app:tint="?attr/colorError" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAGUM CITY CENTRAL FIRE STATION"
                        android:textStyle="bold"
                        android:textSize="16sp"
                         />
                </LinearLayout>

                <!-- Contact row (keeps your id) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_call_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/content_desc_phone_icon"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/globeContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GLOBE - 0926-717-1538"
                        android:autoLink="phone"
                        android:linksClickable="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Contact row (keeps your id) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_call_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/content_desc_phone_icon"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/smartContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMART - 0964-765-0785"
                        android:autoLink="phone"
                        android:linksClickable="true"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <!-- Card 1: Cuambugan -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tagumWest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tagumCentral"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_map_pin_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/content_desc_icon_map_title"
                        app:tint="?attr/colorError" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAGUM CITY WEST SUB-STATION"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <!-- Contact row (keeps your id) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_call_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/content_desc_phone_icon"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/globeWestContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GLOBE - 0916-461-9521"
                        android:autoLink="phone"
                        android:linksClickable="true"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tips -->
        <TextView
            android:id="@+id/tips_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Emergency Tips"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tagumWest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Divider -->
        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/tips_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tips_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• Stay calm and act quickly.\n• Call the nearest fire station.\n• Assist the elderly and children.\n• Use stairs, not elevators, during a fire.\n• Don’t attempt to fight large fires alone."
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/tips_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
