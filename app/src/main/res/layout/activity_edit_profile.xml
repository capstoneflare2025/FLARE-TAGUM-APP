<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:title="Edit Profile"
            app:titleCentered="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Keep your existing 'back' view for code compatibility -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/content_desc_navigate_up"
            android:src="@drawable/ic_backed"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/topBar"
            app:layout_constraintTop_toTopOf="@id/topBar"
            app:layout_constraintBottom_toBottomOf="@id/topBar" />

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="999dp"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_desc_profile_photo"
                android:src="@drawable/ic_profile"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Camera Icon Overlay (outside the card, no circle) -->
        <ImageView
            android:id="@+id/changePhotoIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/content_desc_change_photo"
            android:backgroundTint="#E00024"
            app:layout_constraintEnd_toEndOf="@id/avatarCard"
            app:layout_constraintBottom_toBottomOf="@id/avatarCard"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>



        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/avatarCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:divider="?attr/dividerHorizontal"
                android:showDividers="none">

                <!-- Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_person_24"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginTop="6dp">

                    <!-- Keep your existing ID -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Full name" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_email_24"
                    app:endIconMode="clear_text"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginTop="6dp">

                    <!-- Keep your existing ID, but make it non-editable visually -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contact -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_call_24"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginTop="6dp">

                    <!-- Keep your existing ID -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="09xxxxxxxxx"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Current Password (hidden by default; keeps your IDs) -->
                <TextView
                    android:id="@+id/currentPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Password"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_lock_24"
                    app:endIconMode="password_toggle"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">

                    <!-- Keep your existing ID -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/currentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter current password"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_marginTop="24dp"
                    app:cornerRadius="14dp"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="#E00024"
                    android:textColor="?attr/colorOnPrimary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom spacing for scroll -->
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
